#cloud-config

hostname: k3s-pi4-b

chpasswd:
  expire: false
  list:
  - ubuntu:$UBUNTU_PASSWORD

# Enable password authentication with the SSH daemon
ssh_pwauth: false

ssh_import_id:
- gh:billimek

ssh_authorized_keys:
  - "ssh-rsa  jeff@hackintosh.local"
  - "ssh-rsa  billimek@github/23922613 # ssh-import-id gh:billimek"
  - "ssh-rsa  root@proxmox"

## Update apt database and upgrade packages on first boot
package_update: true
package_upgrade: true

ntp:
  enabled: true
  servers:
    - 10.0.7.1

packages:
- curl
- wget
- htop
- nfs-common

runcmd:
- ln -sfn /run/systemd/resolve/resolv.conf /etc/resolv.conf
- curl -sfL https://get.k3s.io | K3S_URL=https://k3s-0:6443 K3S_TOKEN=$K3OS_TOKEN sh -s - --node-taint arm=true:NoExecute 
- sync
- reboot -f
